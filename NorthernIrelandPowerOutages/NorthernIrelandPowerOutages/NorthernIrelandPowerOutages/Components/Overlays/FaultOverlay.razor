@using GeocodeService
@using Infrastructure.Data
@using NorthernIrelandPowerOutages.Models
@inject IGeocodeService GeocodeService
@inject ApplicationDbContext DbContext
@inject AuthenticationStateProvider AuthenticationStateProvider

<div class="overlay">
    <div class="overlay-content">
        <div class="dialog-header">
            @if (isFavourited)
            {
                <button class="icon-button" onclick="@AddToFavourites">
                    <span class="bi bi-heart-fill"></span>
                </button>
            }
            else
            {
                @if (user is not null)
                {
                    <button class="icon-button" onclick="@AddToFavourites">
                        <span class="bi bi-heart"></span>
                    </button>
                }
            }
            <button onclick="@CloseOverlay" class="icon-button close-button">
                <span class="icon-close"></span>
            </button>
        </div>
        <div class="dialog-body">
            <div>
                <span class="bi bi-exclamation-triangle-fill big-red-icon"></span>
            </div>
            <p class="dialog-title">Fault</p>
            <h3 class="dialog-location">@faultLocation</h3>

            <div class="info-grid">
                <div class="info-box">
                    <p class="info-label">Time reported</p>
                    <p class="info-value">@faultTimeReported</p>
                    <p class="info-date">@faultDateReported</p>
                </div>
                <div class="info-box">
                    <p class="info-label">Estimated restore time</p>
                    <p class="info-value">@faultRestoreTime</p>
                    <p class="info-value">@faultRestoreDate</p>
                </div>
            </div>

            <div class="customers-affected">
                <span>@Fault.NumCustAffected Customer/s affected</span>
            </div>

            <p class="apology-message">
                @Fault.StatusMessage
            </p>
        </div>
    </div>
</div>

<style>
        .overlay {
                position: fixed;
                top: 0;
                left: 0;
                width: 100vw;
                height: 100vh;
                background-color: rgba(0,0,0,0.5);
                z-index: 9999;
                display: flex;
                justify-content: center;
                align-items: center;

    }

        .overlay-content {
                background-color: #f0f0f0;
                padding: 2rem;
                border-radius: 8px;

    }

        .dialog-header {
                display: flex;
                justify-content: space-between;
                align-items: center;
                padding-bottom: 15px;

    }

        .big-red-icon {
                font-size: 5em;
                color: red;

    }

        .icon-button {
                background: none;
                border: none;
                cursor: pointer;
                color: #333;
                font-size: 1.5em;
                  display: flex;
                  justify-content: center;
                align-items: center;
                padding: 5px;
                border-radius: 50%;
                transition: background-color 0.2s;

    }

            .icon-button:hover {
                    background-color: rgba(0, 0, 0, 0.1);

    }

        .icon-close::before {
                content: '✕';

    }

        .icon-warning::before {
                content: '⚠';

    }

        .dialog-body {
                text-align: center;

    }

        .dialog-title {
                font-size: 0.9em;
                text-transform: uppercase;
                color: #666;
                  margin-bottom: 5px;

    }

        .dialog-location {
                font-size: 1.8em;
                font-weight: bold;
                color: #222;
                margin-top: 0;
                margin-bottom: 25px;

    }

        .info-grid {
                display: flex;
                justify-content: space-around;
                gap: 15px;
                margin-bottom: 25px;

    }

        .info-box {
                background-color: #e8e8e8;
                border-radius: 8px;
                padding: 15px;
                flex: 1;
                text-align: center;

    }

        .info-label {
                font-size: 0.8em;
                color: #666;
                margin-bottom: 5px;
                margin-top: 0;

    }

        .info-value {
                font-size: 1.6em;
                font-weight: bold;
                color: #222;
                margin-bottom: 5px;
                margin-top: 0;

    }

        .info-date {
                font-size: 0.8em;
                color: #666;
                margin-top: 0;

    }

        .customers-affected {
                background-color: #e8e8e8;
                  border-radius: 8px;
                padding: 12px 15px;
                margin-bottom: 25px;
                font-size: 1.1em;
                font-weight: bold;
                color: #222;

    }

        .apology-message {
                font-size: 0.95em;
                line-height: 1.4;
                color: #444;
                margin-bottom: 30px;
                padding: 0 5px;

    }

        .keep-updated-button {
                background-color: #007BFF;
                  color: white;
                border: none;
                border-radius: 8px;
                padding: 12px 25px;
                font-size: 1.1em;
                font-weight: bold;
                cursor: pointer;
                transition: background-color 0.2s;
                width: auto;
                  min-width: 180px;
                  margin-bottom: 10px;

    }

            .keep-updated-button:hover {
                    background-color: #0056b3;

    }

</style>

