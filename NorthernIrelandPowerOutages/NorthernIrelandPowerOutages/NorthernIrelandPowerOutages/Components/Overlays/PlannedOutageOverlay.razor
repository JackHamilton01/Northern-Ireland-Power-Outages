@using GeocodeService
@using Infrastructure.Data
@using NorthernIrelandPowerOutages.Models
@inject IGeocodeService GeocodeService
@inject ApplicationDbContext DbContext
@inject AuthenticationStateProvider AuthenticationStateProvider

<div class="overlay">
    <div class="overlay-content">
        <div class="dialog-header">
            <button class="icon-button" onclick="@AddToFavourites">
                <span class="bi bi-heart"></span>
            </button>
            <button onclick="@CloseOverlay" class="icon-button close-button">
                <span class="icon-close"></span>
            </button>
        </div>
        <div class="dialog-body">
            <div>
                <span class="bi bi-clock-fill big-red-icon"></span>
            </div>
            <p class="dialog-title">Planned Outage</p>
            <h3 class="dialog-location">@faultLocation</h3>

            <div class="info-grid">
                <div class="info-box">
                    <p class="info-label">Time reported</p>
                    <p class="info-value">@faultTimeReported</p>
                    <p class="info-date">@faultDateReported</p>
                </div>
                <div class="info-box">
                    <p class="info-label">Estimated restore time</p>
                    <p class="info-value">@faultRestoreTime</p>
                    <p class="info-value">@faultRestoreDate</p>
                </div>
            </div>

            <div class="customers-affected">
                <span>@Fault.NumCustAffected Customer/s affected</span>
            </div>

            <p class="apology-message">
                @Fault.StatusMessage
            </p>
        </div>
    </div>
</div>

<style>
    .overlay {
        position: fixed;
        top: 0;
        left: 0;
        width: 100vw;
        height: 100vh;
        background-color: rgba(0,0,0,0.3);
        z-index: 9999;
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .overlay-content {
        background-color: #ffffff;
        padding: 2rem;
        border-radius: 8px;
        box-shadow: 0 4px 20px rgba(0,0,0,0.1);
    }

    .dialog-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding-bottom: 15px;
    }

    .big-red-icon {
        font-size: 5em;
        color: #6a1b9a; /* Purple but works on light background */
    }

    .icon-button {
        background: none;
        border: none;
        cursor: pointer;
        color: #333;
        font-size: 1.5em;
        display: flex;
        justify-content: center;
        align-items: center;
        padding: 5px;
        border-radius: 50%;
        transition: background-color 0.2s;
    }

        .icon-button:hover {
            background-color: rgba(0,0,0,0.05);
        }

    .icon-close::before {
        content: '✕';
    }

    .dialog-body {
        text-align: center;
    }

    .dialog-title {
        font-size: 0.9em;
        text-transform: uppercase;
        color: #666;
        margin-bottom: 5px;
    }

    .dialog-location {
        font-size: 1.8em;
        font-weight: bold;
        color: #222;
        margin-top: 0;
        margin-bottom: 25px;
    }

    .info-grid {
        display: flex;
        justify-content: space-around;
        gap: 15px;
        margin-bottom: 25px;
    }

    .info-box {
        background-color: #f5f5f5;
        border-radius: 8px;
        padding: 15px;
        flex: 1;
        text-align: center;
        border: 1px solid #ddd;
    }

    .info-label {
        font-size: 0.8em;
        color: #555;
        margin-bottom: 5px;
        margin-top: 0;
    }

    .info-value {
        font-size: 1.6em;
        font-weight: bold;
        color: #111;
        margin-bottom: 5px;
        margin-top: 0;
    }

    .info-date {
        font-size: 0.8em;
        color: #777;
        margin-top: 0;
    }

    .customers-affected {
        background-color: #e9ecef;
        border-radius: 8px;
        padding: 12px 15px;
        margin-bottom: 25px;
        font-size: 1.1em;
        font-weight: bold;
        color: #333;
        border: 1px solid #ccc;
    }

    .apology-message {
        font-size: 0.95em;
        line-height: 1.4;
        color: #444;
        margin-bottom: 30px;
        padding: 0 5px;
    }
</style>
